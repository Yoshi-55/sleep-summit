<div class="flex justify-center items-center min-h-screen bg-[url('/path/to/bg.jpg')] bg-cover bg-center">
  <div class="card bg-base-100 border border-base-300 shadow-xl rounded-lg w-96">
    <div class="card-body p-6">
      <h2 class="text-2xl font-bold mb-4 text-center">
        <%= t('devise.shared.links.sign_up') %>
      </h2>

      <% if resource.errors.any? %>
        <ul class="text-red-500 text-sm mb-4">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-control mb-4">
          <%= f.label :name, t('activerecord.attributes.user.name'), class: "label" %>
          <%= f.text_field :name, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mb-4">
          <%= f.label :email, t('activerecord.attributes.user.email'), class: "label" %>
          <%= f.email_field :email, autofocus: true, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mb-4">
          <%= f.label :password, t('activerecord.attributes.user.password'), class: "label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mb-4">
          <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation'), class: "label" %>
          <%= f.password_field :password_confirmation, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
          <%= f.submit t('devise.shared.links.sign_up'), class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider"><%= t('devise.or') %></div>

      <p class="text-center">
        <%= link_to t('devise.shared.links.sign_in'), new_user_session_path, class: "text-blue-500 hover:underline" %>
      </p>
    </div>
  </div>
</div>
