<div class="flex justify-center gap-4 mt-10 mb-10">
  <%= button_to "就寝", start_sleep_sleep_records_path, method: :post, class: "btn btn-lg" %>
  <%= button_to "起床", wake_up_sleep_records_path, method: :post, class: "btn btn-lg" %>
</div>

<table class="table-auto w-full">
  <thead>
    <tr>
      <th>就寝時間</th>
      <th>起床時間</th>
      <th>睡眠時間</th>
    </tr>
  </thead>
  <tbody>
    <% @sleep_records.each do |record| %>
      <tr>
        <td><%= record.bed_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= record.wake_time&.strftime("%Y-%m-%d %H:%M") || "-" %></td>
        <td>
          <% if record.wake_time %>
            <%= ((record.wake_time - record.bed_time) / 1.hour).round(1) %> 時間
          <% else %>
            -
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
