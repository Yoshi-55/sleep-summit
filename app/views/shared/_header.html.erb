<div class="navbar bg-base-100 shadow-sm fixed top-0 w-full px-4">
  <div class="flex w-full items-center">
    <a class="btn btn-ghost text-xl normal-case" href="/">Sleep Summit</a>

    <div class="ml-auto flex gap-2 items-center">
      <% if user_signed_in? %>
        <span><%= t('navbar.welcome', name: current_user.name) %></span>
        <%= link_to t('navbar.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-outline btn-sm' %>
      <% else %>
        <%= link_to t('navbar.login'), new_user_session_path, class: 'btn btn-outline btn-sm' %>
        <%= link_to t('navbar.sign_up'), new_user_registration_path, class: 'btn btn-primary btn-sm' %>
      <% end %>
    </div>
  </div>
</div>
