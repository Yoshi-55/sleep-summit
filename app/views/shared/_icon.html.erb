      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= p.strip %>" />
    <% end %>
  <% else %>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= path %>" />
  <% end %>
</svg>
