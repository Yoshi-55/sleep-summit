<div class="navbar p-4">
  <div class="navbar-start">
    <h1 class="text-3xl font-bold text-base-content"><%= yield :page_title %></h1>
  </div>
  <div class="navbar-end flex gap-2 items-center">
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost flex items-center gap-2">
        <span class="text-sm font-medium">
          <%= t('navbar.welcome', name: current_user.name) %>
        </span>
        <div class="w-10 rounded-full overflow-hidden">
          <label>
            <%= image_tag "avatars/#{current_user.avatar || 'default.png'}", size: "50x50" %>
          </label>
        </div>
      </div>
      <ul
        tabindex="-1"
        class="menu menu-sm dropdown-content navbar-menu rounded-box z-1 mt-3 w-52 p-2 shadow border border-base-300">
          <li><%= link_to t('navbar.profile'), profile_path %></li>
          <li class="menu-title mt-2">
            <span><%= t('navbar.info') %></span>
          </li>
          <li><%= link_to t('navbar.terms'), terms_path %></li>
          <li><%= link_to t('navbar.privacy'), privacy_path %></li>
          <li><%= link_to t('navbar.contact'), contact_path %></li>
          <li class="border-t border-base-300 mt-2 pt-2">
            <%= link_to t('navbar.logout'), destroy_user_session_path,
              data: { turbo_method: :delete, turbo_confirm: t('navbar.logout_confirm') } %>
          </li>
      </ul>
    </div>
  </div>
</div>