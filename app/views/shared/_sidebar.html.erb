<div class="sidebar fixed left-0 top-0 h-full w-44 flex flex-col bg-base-100 border-r border-base-300 z-20">
  <div class="flex items-center justify-center h-16">
    <%= link_to dashboard_path do %>
      <span class="font-bold text-xl text-primary">SleepSummit</span>
    <% end %>
  </div>
  <nav class="flex-1 flex flex-col gap-2 text-lg pl-2 pr-2">
    <%= link_to dashboard_path,
      class: "group flex items-center w-full px-2 py-2 rounded transition #{current_page?(dashboard_path) ? 'bg-primary/10 text-primary font-bold' : 'hover:bg-base-300/10 text-base-content'}" do %>
      <i class="ph ph-house text-lg"></i>
      <span class="ml-2"><%= t('sidebar.dashboard') %></span>
    <% end %>

    <%= link_to history_path,
      class: "group flex items-center w-full px-2 py-2 rounded transition #{current_page?(history_path) ? 'bg-primary/10 text-primary font-bold' : 'hover:bg-base-300/10 text-base-content'}" do %>
      <i class="ph ph-clock-counter-clockwise text-lg"></i>
      <span class="ml-2"><%= t('sidebar.history') %></span>
    <% end %>

    <% if current_user && ENV["GOOGLE_CLIENT_ID"].present? && ENV["GOOGLE_CLIENT_SECRET"].present? && current_user.google_authenticated? %>
      <%= link_to google_calendars_path,
        class: "group flex items-center w-full px-2 py-2 rounded transition #{current_page?(google_calendars_path) ? 'bg-primary/10 text-primary font-bold' : 'hover:bg-base-300/10 text-base-content'}" do %>
        <i class="ph ph-calendar text-lg"></i>
        <span class="ml-2"><%= t('sidebar.calendar') %></span>
      <% end %>
    <% end %>
  </nav>
</div>