<div class="toast toast-top toast-center mt-10 ml-4 z-50">
  <% flash.each do |key, message| %>
    <% alert_class =
      case key.to_sym
      when :notice, :success
        "alert alert-success alert-soft"
      when :alert, :error
        "alert alert-error alert-soft"
      else
        "alert alert-info alert-soft"
      end
    %>

    <div role="alert"
         data-controller="flash"
         data-flash-delay-value="3000"
         class="<%= alert_class %> shadow-lg">
      <span><%= message %></span>
    </div>
  <% end %>
</div>
