<% content_for :page_title do %>
  <%= t('profiles.show.page_title') %>
<% end %>

    <div class="card bg-base-100 border border-base-300 p-8 max-w-lg mx-auto">
      <div class="flex flex-col items-center">
        <%= image_tag "avatars/#{@user.avatar_filename}", alt: t('profiles.edit.avatar_label'), class: "w-20 h-20 rounded-full mb-4" %>
        <%= t('profiles.show.user_name') %>: <%= @user.name %>

        <div class="mt-6 space-y-4 w-full">
          <%= link_to t('profiles.edit.page_title'), edit_profile_path, class: "btn btn-primary w-full" %>

          <% if ENV["GOOGLE_CLIENT_ID"].present? && ENV["GOOGLE_CLIENT_SECRET"].present? %>
            <div class="divider"><%= t('profiles.show.google_integration') %></div>
            <% if @user.google_authenticated? %>
              <div class="alert alert-success">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span><%= t('profiles.show.google_connected') %></span>
              </div>
              <%= button_to google_calendar_connection_path, method: :delete, class: "btn btn-outline btn-error w-full", data: { confirm: t('profiles.show.google_disconnect_confirm') } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <%= t('profiles.show.google_disconnect') %>
              <% end %>
            <% else %>
              <div class="alert alert-info">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span><%= t('profiles.show.google_not_connected') %></span>
              </div>
              <%= button_to t('profiles.show.google_connect'), user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-primary w-full", data: { turbo: false } %>
            <% end %>
          <% end %>

          <div class="divider"><%= t('profiles.show.account_management') %></div>

          <div class="collapse collapse-arrow bg-base-200">
            <input type="checkbox" />
            <div class="collapse-title text-sm font-medium text-error">
              <%= t('profiles.show.delete_account') %>
            </div>
            <div class="collapse-content">
              <div class="alert alert-warning mt-2 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <div>
                  <h3 class="font-bold"><%= t('profiles.show.delete_warning_title') %></h3>
                  <div class="text-xs"><%= t('profiles.show.delete_warning_message') %></div>
                </div>
              </div>

              <%= button_to t('profiles.show.delete_button'),
                user_registration_path,
                method: :delete,
                class: "btn btn-error btn-outline w-full",
                data: {
                  turbo_confirm: t('profiles.show.delete_confirm')
                } %>
            </div>
          </div>
        </div>
      </div>
    </div>